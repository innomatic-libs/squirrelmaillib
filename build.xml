<?xml version="1.0"?>
<!--
  =======================================================================

   squirrelmaillib build file

  =======================================================================
-->
<project name="SquirrelMail library" basedir=".." default="package">

	<property name="name" value="squirrelmaillib" />
	<property name="version" value="1.4.0-1" />

	<target name="sources">
		<tar destfile="../${name}-src-${version}.tgz" compression="gzip">
			<tarfileset dir="." prefix="${name}-src-${version}">
				<exclude name="**/.svn/**" />
				<exclude name=".cache/**" />
			</tarfileset>
		</tar>
	</target>

	<target name="package">
		<tar destfile="../${name}-${version}.tgz" compression="gzip">
			<tarfileset dir="." prefix="${name}-${version}">
				<exclude name="**/.cvsignore" />
				<exclude name="**/.svn/**" />
				<exclude name="build/**" />
				<exclude name="nbproject/**" />
				<exclude name="project.index" />
				<exclude name=".project" />
				<exclude name=".settings/**" />
				<exclude name=".cache/**" />
				<exclude name="build.xml" />
			</tarfileset>
		</tar>
	</target>

</project>
